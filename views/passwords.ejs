<!DOCTYPE html>
<html lang="en">

<head>
  <title>Password Keeper</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
<!--
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" /> -->
  <!-- <link rel="stylesheet" href="/styles/layout.css" /> -->

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <link rel="stylesheet" href="/styles/password.css"/>

</head>

<body class = 'pagebody'>

  <%- include("./partials/_header") -%>
  <div class = 'passwords' >
    <form id="create-password" action="/passwords" method="POST">
    <input type="text" name="url" placeholder="Insert URL" id="url-entry">
    <input type="text" name="username" placeholder="Insert username" id="username-entry">
    <input type="text" name="email" placeholder="Insert email" id="email-entry">
    <input type="text" name="password" placeholder="Create Password" id="pw-entry">
    <input type="text" name="category" placeholder="Create Category" id="pw-category">
    <table>
      <div>
        <input type="text" id="pw-length" placeholder="Length">
        <a>Include Lowercase</a>
        <input name="pw-lowercase" type="checkbox" id="pw-lowercase">
        <a>Include Uppercase</a>
        <input name="pw-uppercase" type="checkbox" id="pw-uppercase">
        <a>Include Numbers</a>
        <input name="pw-number" type="checkbox" id="pw-number">
        <a>Include Symbols</a>
        <input name="pw-symbol" type="checkbox" id="pw-symbol">


          <th><div id="generatebutton" class="btn1">Generate</div></th>
      </div>
    </table>
      <button type="submit" id="new-pw-submit">Submit</button>
</form>

</div>
<div class="allpasswords">
<table >
<thead>
  <tr>
    <th>Username</th>
    <th>URL</th>
    <th>email</th>
    <th>password</th>
    <th>category</th>
  </tr>
</thead>
<% for (let entry of passwords){ %>
  <tr>
    <td><%= entry.username %></td>
    <td><%= entry.url %></td>
    <td><%= entry.email %></td>
    <td id="db-retrieved-pw"><%= entry.password %></td>
    <td><%= entry.category %></td>
    <td><button id="pw-edit">Edit</button></td>
    <td><button type = "submit" id ='pw-db-copy'>Copy</button></td>
    <td><button>Delete</button></td>
  </tr>
<%}%>
<tr class="newestPw"></tr>

</table>
</div>
</body>

</html>


